<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.everhardsoft.liarsdice.activity.ManualPlayActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_manualplay_background_layout">

        <view
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            class="com.everhardsoft.diorama.graphic.view.DioramaSurfaceView"
            android:id="@+id/activity_manualplay_game_surfaceview"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_manualplay_result_layout"
        android:orientation="horizontal"
        android:paddingTop="48dp"
        android:gravity="top"
        android:paddingRight="12dp"
        android:paddingLeft="12dp"
        android:paddingBottom="24dp">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_manualplay_castdie_layout"
        android:padding="48dp">

        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/activity_manualplay_castdie_castdie_swiperefreshlayout">
            <TextView
                android:text="@string/activity_manualplay_castdie_castprompt_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/activity_manualplay_castdie_castprompt_textview"
                android:layout_centerInParent="false"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="center_vertical"
                android:textSize="24sp" />
        </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_manualplay_fragments_layout"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_manualplay_menu_layout"
        android:padding="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_manualplay_menu_dicecount_textview"
            android:layout_alignBaseline="@+id/activity_manualplay_menu_add_button"
            android:layout_alignBottom="@+id/activity_manualplay_menu_add_button"
            android:layout_centerHorizontal="true"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:textSize="36sp" />

        <Button
            android:text="@string/activity_manualplay_castdie_menu_subtract_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_manualplay_menu_subtract_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/activity_manualplay_menu_add_button"
            android:layout_toLeftOf="@+id/activity_manualplay_menu_dicecount_textview"
            android:layout_toStartOf="@+id/activity_manualplay_menu_dicecount_textview"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp" />

        <Button
            android:text="@string/activity_manualplay_castdie_menu_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activity_manualplay_menu_add_button"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/activity_manualplay_menu_dicecount_textview"
            android:layout_toEndOf="@+id/activity_manualplay_menu_dicecount_textview"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp" />
    </RelativeLayout>

</RelativeLayout>
